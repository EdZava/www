<nav class="pagination">
    {{#paginate pagination type="previous"}}
      <li>
          {{#if disabled}}
          <span class="prev disabled"><b>&laquo;</b> Previus</span>
          {{else}}
            <a href="?page={{n}}" class="prev"><b>&laquo;</b> Previus</a>
          {{/if}}
      </li>
    {{/paginate}}

    {{#paginate pagination type="middle" limit="7"}}
      <li {{#if active}}class="active"{{/if}}>
          <a href="?page={{n}}" class="itens">{{n}}</a>
      </li>
    {{/paginate}}

    {{#paginate pagination type="next"}}
      <li>
          {{#if disabled}}
            <span class="next disabled">Next <b>&raquo;</b> </span>
          {{else}}
            <a href="?page={{n}}" class="next">Next <b>&raquo;</b> </a>
          {{/if}}
      </li>
    {{/paginate}}
</nav>
